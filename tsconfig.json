{
  "compilerOptions": {
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "outDir": "./dist",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "types": [
      "reflect-metadata",
      "mocha",
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
